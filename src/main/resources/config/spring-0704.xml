<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="chinese" class="com.tom.ssm.spring5.chapter0704.Person" scope="request">
<!--        <property name="axe" ref="stoneAxe"></property>-->
        <property name="test" value="孫悟空"></property>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>config.message</value>
            </list>
        </property>
    </bean>
    <bean class="com.tom.ssm.spring5.chapter0704.EmailNotifier"></bean>
    <bean id="people" class="com.tom.ssm.spring5.chapter0704.People" scope="prototype">
    </bean>


    <bean id="exampleBean" class="com.tom.ssm.spring5.chapter0704.ExampleBean">
        <!-- 指定int型的参数值 -->
        <property name="integerField" value="1"/>
        <!-- 指定double型的参数值 -->
        <property name="doubleField" value="2.3"/>
    </bean>
</beans>